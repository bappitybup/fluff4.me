.breadcrumbs:

	&-meta:
		%z-index-fg
		%relative

	&-info:
		%relative

	&-title:

	&-description:

	&-actions:
		%relative
		%unmargin-left-3
		%flex
		%flex-column
		%width-100

		&-action:
			#after: .button
			%font-2

	&-back-button:

	&-path:

		&-separator:

		&--hidden:
			%hidden

	&-rss-button:
		#after: .button, .button-type-flush, .rss-button
		%absolute
		%pointer-events-all
		%z-index-fg
		%right-100
		%margin-right-2
		%top-0
		%margin-top-0
